<h1>New project</h1>

<% form_for(@project, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :applet %> - This should be a jar that includes any classes or libraries your applet depends on.<br />
    <%= f.file_field :applet %>
  </p>
  <p>
    <%= f.label :applet_code %> - The main class name. Ex: "Tetris.class"<br />
    <%= f.text_field :applet_code %>
  </p>
  <p>
    <%= f.label :applet_width %><br />
    <%= f.text_field :applet_width %>
  </p>
  <p>
    <%= f.label :applet_height %><br />
    <%= f.text_field :applet_height %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>